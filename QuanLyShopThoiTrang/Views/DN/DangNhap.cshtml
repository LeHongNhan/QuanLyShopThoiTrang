
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>DangNhap</title>
    <!--Bootstrap 4-->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet">
    <script src="~/Scripts/bootstrap.bundle.min.js" type="text/javascript"></script>
</head>
<body>
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card mx-auto" style="max-width: 400px;">
                    <h3 class="card-header" style="text-align: center; background-color: Background; margin: 20px; color: black;font-family:Arial;">Đăng Nhập</h3>
                    <div class="card-body">
                        <form id="loginForm" onsubmit="return validateLoginForm()">
                            <div class="form-group">
                                <label class="text-secondary" for="username">Số điện thoại hoặc email*:</label>
                                <input type="text" class="form-control" id="username" required>
                            </div>
                            <div class="form-group">
                                <label class="text-secondary" for="register_password">Mật khẩu*</label>
                                <div class="input-group">
                                    <input class="form-control" required="" wire:model.lazy="password" name="register_password" type="password" value="" id="register_password">
                                    <div class="input-group-append">
                                        <button class="btn btn-outline-secondary border-0" type="button" onclick="togglePassword()">👁️</button>
                                    </div>
                                </div>
                                <a>@Html.ActionLink("Quên mật khẩu", "QuenMatKhau")</a>
                            </div>

                            <button type="submit" class="btn btn-danger btn-block" style="background-color: moccasin; border: none;">Đăng Nhập</button>
                        </form>
                    </div>

                    <div class="form-choice">
                        <p class="text-center">Hoặc đăng nhập với</p>
                        <div class="row">
                            <div class="col-sm-6 text-center">
                                <a href="#" class="btn btn-login btn-g">
                                    <i class="fab fa-google"> Google</i>
                                </a>
                            </div>
                            <div class="col-sm-6">
                                <a href="#" class="btn btn-login btn-f">
                                    <i class="fab fa-facebook "> Facebook</i>
                                       
</a>
                            </div>
                        </div>
                    </div>
                    <p class="text-center mt-3">
                        <a>@Html.ActionLink("Chưa có Tài Khoản ?", "Login")</a>
                    </p>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
