@model IEnumerable<QuanLyShopThoiTrang.Models.Product>

<div style="margin-left: 10%; margin-right: 10%; background-color:Background" id="cardCarousel" class="carousel slide" data-ride="carousel">
    <div class="carousel-inner ">
        <div class="carousel-item active ">
            <div class="card-group">
                @foreach (var item in Model.Take(3))
                {
                    <div class="card d-inline " style="margin-left:5%;margin-right:5%">
                        @*<img style="height:300px; width:100%" class="card-img-top" src="~/Image/AoThun/A010.jpg" />*@
                        @if (item.category_id == 1)
                        {
                            <img style="height:300px" st class="card-img-top" src="~/Image/AoThun/@item.ImageSP" />
                        }
                        @if (item.category_id == 2)
                        {
                            <img style="height:300px" st class="card-img-top" src="~/Image/SoMi/@item.ImageSP" />
                        }

                        @if (item.category_id == 7 || item.category_id == 8)
                        {
                            <img style="height:300px" st class="card-img-top" src="~/Image/QuanDai/@item.ImageSP" />
                        }
                        @if (item.category_id == 9 && item.category_id == 9)
                        {
                            <img style="height:300px" st class="card-img-top" src="~/Image/QuanShort/@item.ImageSP" />
                        }
                        @if (item.category_id == 10 || item.category_id == 11)
                        {
                            <img style="height:300px" st class="card-img-top" src="~/Image/VayDam/@item.ImageSP" />
                        }
                        <div class="card-body">
                            @if (item.product_name.Length > 30)
                            {
                                <p class="card-title">@item.product_name.Substring(0, 25)... </p>
                            }
                            else
                            {
                                <p class="card-title">@item.product_name </p>
                            }
                            <p class="card-title text-center">₫ @item.price.Value.ToString("N0")</p>
                        </div>
                    </div>
                }
            </div>
