@model IEnumerable<QuanLyShopThoiTrang.Models.Size>

@{
    ViewBag.Title = "SizeProduct";
    Layout = "~/Areas/Admin/Views/Shared/AdminLayoutPage1.cshtml";
}

<h2>SizeProduct</h2>

<p>
    @Html.ActionLink("Create New", "AddSize")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.size_name)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.size_name)
        </td>
        <td>
            @Html.ActionLink("Edit", "UpdateSize", new { id=item.size_id }) |
            @Html.ActionLink("Delete", "DeleteSize", new { id=item.size_id })
        </td>
    </tr>
}

</table>
