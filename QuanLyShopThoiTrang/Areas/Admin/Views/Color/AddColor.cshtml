@model QuanLyShopThoiTrang.Models.Color

@{
    ViewBag.Title = "AddColor";
    Layout = "~/Areas/Admin/Views/Shared/AdminLayoutPage1.cshtml";
}

<h2>Add Cate</h2>

@using (Html.BeginForm("AddColor", "Color", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Category</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.color_id, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <label for="product_name">Tên Danh Mục</label>
                <input type="text" class="form-control" id="color_name" name="color_name" placeholder="Tên Danh Mục" />
                @Html.ValidationMessageFor(model => model.color_name, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "ColorProduct")
</div>