@model QuanLyShopThoiTrang.Models.Color

@{
    ViewBag.Title = "UpdateColor";
    Layout = "~/Areas/Admin/Views/Shared/AdminLayoutPage1.cshtml";
}

<h2>Update Color</h2>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Category</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.color_id)

        <div class="form-group">
            @Html.LabelFor(model => model.color_name, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <label for="product_name">Tên Danh Mục</label>
                <input type="text" class="form-control" id="product_name" name="color_name" placeholder="Tên Màu" />
                @Html.ValidationMessageFor(model => model.color_name, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "ColorProduct")
</div>
